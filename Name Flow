// Prevent Injection Attacks by limiting user input


public class Name Corrector {

	public static void main(String[] args) {
	Scanner input = new Scanner(System.in);
	
boolean doover = true;
	
do {	
	
// First name
	System.out.println("What is your first name? ");
	String s1 = input.nextLine();
	
	while (!s1.matches("[a-zA-Z]+")){
	    System.out.println("Please enter a valid name:");
	    s1 = input.nextLine();
	}
	
// Last name
	String s01 = s1.substring(0, 1).toUpperCase() + s1.substring(1);
	System.out.println("What is your last name?");
	String s2 = input.nextLine();
	
	while (!s2.matches("[a-zA-Z]+")){
	    System.out.println("Please enter a valid name:");
	    s2 = input.nextLine();
	}
	
// First and Last name
	String s02 = s2.substring(0, 1).toUpperCase() + s2.substring(1);
	String name = s01.trim() + " " + s02.trim();
		
	
// Verify Name
	System.out.println("Is your name " + name +"? Y/N:");
	char deci = input.next().charAt(0); 
	char deciCheck = Character.toUpperCase(deci);	
	
// Boolean Method 
	doover = yesorno(deciCheck);

} while (doover == true);	

input.close();
System.exit(0);

}
	
	public static boolean yesorno(char a) {
	
			char ansNo = 'N';

			if (a == ansNo) {
			return true;
			}
				
			else {
			return false;
			}
		
	}	
}	
